<% page_title = "All Sections" %>

<%= link_to("<< Back to Pages", pages_controller_index_path(:subject_id => @page.subject_id)) %>

<div class="sections index">
  <h2>Sections</h2>
  <%=link_to("Add new section",new_sections_controller_path(:page_id => @page.id),:class => 'action new')%>
  <table class="listing" summary="Sections List">
    <tr class="header">
      <th>#</th>
      <th>Page ID</th>
      <th>Name</th>
      <th>Visible</th>
      <th>Action</th>
    </tr>
    <% @sections.each do |section| %>
    <tr>
      <td><%= section.position %></td>
      <td><%= section.page_id%></td>
      <td><%= section.name%></td>
      <td><%= status_tag(section.visible) %></td>
      <td class="actions">
          <%=link_to("Show", sections_controller_path(section, :page_id => @page.id), :class => 'action_show') %>
          <%=link_to("Edit", edit_sections_controller_path(section, :page_id => @page.id), :class => 'action_edit') %>
          <%=link_to("Delete", delete_sections_controller_path(section, :page_id => @page.id), :class => 'action_delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
