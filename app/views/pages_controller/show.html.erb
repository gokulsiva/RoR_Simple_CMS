
<%=link_to('Back to list', pages_controller_index_url, :class => 'back-line') %>
<div class="page show">
    <h2>Show Page</h2>
    <table summary="Show page view">
        <tr>
          <th>Name</th>
          <td><%= @page.name%></td>
        </tr>
        <tr>
          <th>Subject Name</th>
          <td><%=Subject.find_by_id(@page.subject_id).name if @page.subject_id%></td>
        </tr>
        <tr>
          <th>Permalink</th>
          <td><%= @page.permalink%></td>
        </tr>
        <tr>
          <th>Position</th>
          <td><%= @page.position%></td>
        </tr>
        <tr>
          <th>Visible ?</th>
          <td><%= @page.visible ? 'True': 'False' %></td>
        </tr>
        <tr>
          <th>Created at</th>
          <td><%= @page.created_at%></td>
        </tr>
        <tr>
          <th>Updated at</th>
          <td><%= @page.updated_at%></td>
        </tr>
    </table>
</div>
