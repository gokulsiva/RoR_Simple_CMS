<% @page_title = "New Page" %>
<%=link_to('Back to list', pages_controller_index_path(:subject_id => @subject.id), :class => 'back-line') %>
<div class="page new">
  <h2>Create Page</h2>
    <%=form_for(@page, :url => pages_controller_index_path(:subject_id => @subject.id)) do |f| %>
      <%= render(:partial => 'form', :locals => {:f => f})%>
      <div class="form-buttons">
        <%= f.submit("Create Page")%>
      </div>
    <% end %>
</div>
