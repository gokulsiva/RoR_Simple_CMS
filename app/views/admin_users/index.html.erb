<% @page_title = 'All Admin Users'%>
<%= link_to("<< Back to Menu", admin_path, :class => 'back-link')%>
<div class="admin-users index">
  <h2>Admin Users</h2>
  <% image_tag('plus.png', :size => '11x11', :alt => '+')%>
  <%= link_to("Add new Admin User", new_admin_user_path, :class => 'action new')%>
  <div>
    <%= pluralize(@admin_users.size, 'admin user')%> found
  </div>
  <table class="listing" summary="AdminUser Table">
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% for user in @admin_users %>
    <tr>
      <td><%= user.username%></td>
      <td><%= user.name%></td>
      <td><%= mail_to(user.email)%></td>
      <td class="actions">
          <%=link_to("Edit", edit_admin_user_path(user), :class => 'action_edit') %>
          <%=link_to("Delete", delete_admin_user_path(user), :class => 'action_delete') %>
      </td>
    </tr>
    <% end %>
  </table>

</div>
