<%if !flash[:notice].blank?%>
  <div class="notice">
    <%=flash[:notice]%>
  </div>
<%end%>
<%=link_to('Back to list', subjects_path, :class => 'back-line') %>
<div class="subject show">
    <h2>Show Subject</h2>
    <table summary="Show subject view">
        <tr>
          <th>Name</th>
          <td><%= @subject.name%></td>
        </tr>
        <tr>
          <th>Position</th>
          <td><%= @subject.position%></td>
        </tr>
        <tr>
          <th>Visible ?</th>
          <td><%= @subject.visible ? 'True': 'False' %></td>
        </tr>
        <tr>
          <th>Created at</th>
          <td><%= @subject.created_at%></td>
        </tr>
        <tr>
          <th>Updated at</th>
          <td><%= @subject.updated_at%></td>
        </tr>
    </table>
</div>
