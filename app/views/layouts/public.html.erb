<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Simple CMS <%= " | #{@page_title}" if @page_title%></title>
    <%= stylesheet_link_tag('application', :media => 'all')%>
  </head>
  <body>
    <div class="header">
      <h1>Simple CMS</h1>
    </div>
    <div id="main">

      <div id="navigation">
        <%= render(:partial => 'layouts/navigation', :locals => {:subjects => @subjects})%>
      </div>

    <div id="content">
    <!--Before Yield-->
    <%= yield%>
    <!--After Yield-->
    </div>
    <div class="clear">
    </div>
    </div>
    <div id="footer">
      <p id="copyright">&copy;gokul.com</p>
    </div>
  </body>
</html>
